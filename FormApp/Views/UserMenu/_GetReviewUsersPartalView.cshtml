@model TamplateViewModel
<div class="modal fade" id="@Model.Id-review" tabindex="-1" aria-labelledby="tamplateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="tamplateModalLabel">Reviews</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @foreach (var review in Model.ListReviews)
                {
                    <div class="row py-3 border-bottom">
                        <div class="col-2 d-flex justify-content-center align-items-start">
                            <img class="img-fluid rounded-circle shadow-sm" src="@review.UrlPhoto" alt="User Avatar" />
                        </div>
                        <div class="col">
                            <div class="d-flex justify-content-between">
                                <p class="fw-bold text-primary mb-1">@review.Login</p>
                                <div class="d-flex">
                                    @for (int i = 0; i < review.Rating; i++)
                                    {
                                        <i class="bi bi-star-fill text-warning"></i>
                                    }
                                </div>
                            </div>
                            <p class="text-muted mb-2" style="font-size: 0.9rem;">@review.Comment</p>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>