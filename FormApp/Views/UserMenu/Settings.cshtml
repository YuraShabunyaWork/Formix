@model SettingsViewModel
@{
    ViewData["Title"] = "Settings";
}
<h3 class="display-6 mb-4 ps-4" style="font-size:3rem">Settings:</h3>
<div class="row">
    <div class="col-4 d-none d-md-block">
        <img src="@Model.UrlPhoto" class="img-thumbnail border-0 w-100" />
    </div>
    <div class="col-12 col-md">
        <div class="row-cols-1 mb-2">
            <div class="border border-1 rounded-3 shadow shadow-sm bg-opacity-50 p-4 bg-body-secondary small">
                <h5>Two-factor authentication</h5>
                <form asp-controller="UserMenu" asp-action="TwoFactor" method="post">
                    <div class="d-block mb-2">
                        <input asp-for="Email" type="hidden" />
                        <input asp-for="UrlPhoto" type="hidden" />
                    </div>
                    <div class="d-block mb-3">
                        <input asp-for="IsTwoFactor" type="checkbox" />
                        <label asp-for="IsTwoFactor">Enable two-factor authentication</label>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-outline-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row-cols-1 mb-2">
            <div class="border border-1 rounded-3 shadow shadow-sm bg-opacity-50 p-4 bg-body-secondary small">
                <h5>Change email address</h5>
                <form asp-controller="UserMenu" asp-action="ChangeEmail" method="post">
                    <div class="d-block mb-2">
                        <label asp-for="Email" class="h6"></label>
                        <input asp-for="Email" type="hidden" />
                        <label>@Model.Email</label>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-outline-primary">Change</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-12 col-md">
            <div class="border border-1 rounded-3 shadow shadow-sm bg-opacity-50 p-4 bg-body-secondary small">
                <h5>Reset Password</h5>
                <form asp-controller="UserMenu" asp-action="ResetPassword" method="post">
                    <input asp-for="Email" type="hidden" />
                    <input asp-for="UrlPhoto" type="hidden" />
                    <div class="mb-2">
                        <label asp-for="OldPassword" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="OldPassword" type="password" id="oldPassword" class="form-control" />
                            <button type="button" id="togglePassword" tabindex="-1" class="btn btn-outline-secondary">
                                <i id="toggleIcon" class="bi bi-eye"></i>
                            </button>
                        </div>  
                    </div>
                    <div class="mb-2">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="NewPassword" type="password" id="newPassword" class="form-control" />
                            <button type="button" id="togglePassword" tabindex="-1" class="btn btn-outline-secondary">
                                <i id="toggleIcon" class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="ConfirmPassword" type="password" id="confirmPassword" class="form-control" />
                            <button type="button" id="togglePassword" tabindex="-1" class="btn btn-outline-secondary">
                                <i id="toggleIcon" class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger small"></div>
                    <div class="d-block">
                        <button type="submit" class="btn btn-outline-primary w-100">Reset</button>
                    </div>
                </form>
            </div>
    </div>
</div>
<script src="~/js/PasswordEye.js"></script>
