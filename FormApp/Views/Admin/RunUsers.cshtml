@{
    Layout = "";
    @model List<UserForAdminTable>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["TitleForm"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar border-bottom box-shadow bg-light px-5">
            <div class="container-fluid">
                <div>
                    <div class="btn-group me-3">
                        <button type="submit" form="userForm" name="action" value="lock" class="btn btn-primary">
                            <i class="bi bi-lock-fill"></i>
                        </button>
                        <button type="submit" form="userForm" name="action" value="unLock" class="btn btn-outline-primary">
                            <i class="bi bi-unlock-fill"></i>
                        </button>
                    </div>
                    <div class="btn-group">
                        <button type="submit" form="userForm" name="action" value="makeAdmin" class="btn btn-success">Set Admin</button>
                        <button type="submit" form="userForm" name="action" value="makeUser" class="btn btn-outline-primary">Set User</button>
                        <button type="submit" form="userForm" name="action" value="delete" class="btn btn-danger">
                            <i class="bi bi-trash3-fill"></i>
                        </button>
                    </div>
                </div>
                <div>
                    <input type="text" class="form-control" placeholder="Searth" />
                </div>
                <div>
                    <a asp-controller="" asp-action="" type="button" class="btn btn-danger">Exit</a>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="container flex-grow-1 bg-white" style="min-height: 50px;">
        <form id="userForm" method="post">
        <table class="table"> 
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" />
                    </th>
                    <th>
                        Login
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        User Role
                    </th>
                    <th>
                        Locked
                    </th>
                </tr>
            </thead>
            <tbody>
                    @foreach(var user in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="selectedUsers" value="@user.Id" />
                            </td>
                            <td>
                                @user.Login
                            </td>
                            <td>
                                @user.Email
                            </td>
                            <td>
                                @user.UserRole
                            </td>
                            <td>
                                @user.IsLocked
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
        </form>
    </main>
    <footer class="border-top footer text-muted bg-light py-3">
        <div class="container">
            &copy; 2024 - Formix
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>