@model SingupViewModel
@{
    ViewData["TitleForm"] = "Sing up";
    Layout = "_LayoutAccount.cshtml";
}

<div class="container" style="width: 400px">
    <div class="text-center">
        <a asp-action="" asp-controller="">
            <img src="~/logo.png" class="rounded-pill mb-2" style="height:15vh" />
        </a>
        <p class="display-6">Sing up to <span class="fw-bolder">Formix</span></p>
    </div>
    <div class="border border-1 rounded-3 shadow shadow-sm bg-opacity-50 p-4 pt-0 bg-body-secondary small">
        <div asp-validation-summary="All" class="text-danger small"></div>
        <form asp-controller="Account" asp-action="Singup">
            <div class="mb-2">
                <label asp-for="Login" class="form-label"></label>
                <input asp-for="Login" type="text" class="form-control" placeholder="Enter Login" />
                <span asp-validation-for="Login" class="text-danger small"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter Email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Password" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Password" type="password" id="password" class="form-control" placeholder="Enter Password" />
                    <button type="button" id="togglePassword" tabindex="-1" class="btn btn-outline-secondary">
                        <i id="toggleIcon" class="bi bi-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="ConfirmPassword" type="password" id="password" class="form-control" placeholder="Confirm Password" />
                    <button type="button" id="togglePassword" tabindex="-1" class="btn btn-outline-secondary">
                        <i id="toggleIcon" class="bi bi-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success">Sing up</button>
            </div>
        </form>
    </div>
</div>

<script src="~/js/PasswordEye.js"></script>
