<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["TitleForm"]</title>
    <link rel="icon" type="image/png" href="~/Logo.png" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
</head>
<body class="d-flex flex-column min-vh-100">
    <header style="height:10vh">
        <nav class="navbar navbar-expand-lg navbar-light bg-primary-subtle border-bottom box-shadow fixed-top ps-3 pe-2 mb-1">
            <div class="d-flex justify-content-between align-items-center w-100">
                <div>
                    <a class="navbar-brand p-0" asp-controller="Home" asp-action="Index">
                        <img src="~/logo.png" class="rounded-pill" style="height:6vh;" />
                        FormiX
                    </a>
                </div>
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <div class="d-flex w-100 justify-content-between align-items-center">
                        <div>
                            <a asp-controller="Tamplate" asp-action="CreateTamplate" class="btn btn-warning btn-sm">Create Form</a>
                        </div>
                        <div>
                            @if (User.IsInRole("admin"))
                            {
                                <label class="text-muted m-2">(admin)</label>
                            }
                            <button class="btn btn-light border-2 rounded-pill text-black p-0"
                                    type="button"
                                    data-bs-toggle="offcanvas"
                                    data-bs-target="#offcanvasRight"
                                    aria-controls="offcanvasRight"
                                    style="height:7vh;">
                                <img class="h-100 rounded-pill" src="@(User.Claims.FirstOrDefault(c => c.Type == "ProfilePhotoUrl")?.Value ?? "/AvaDef.png")">
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="d-flex">
                        <div>
                            <a asp-controller="Account" asp-action="Singin" class="btn btn text-black me-1">Sing in</a>
                        </div>
                        <div>
                            <a asp-controller="Account" asp-action="Singup" class="btn btn-outline-secondary text-black">Sing up</a>
                        </div>
                    </div>
                }
            </div>
        </nav>

        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasRightLabel">@User.Identity.Name</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    @if (User.IsInRole("admin"))
                    {
                        <div class="border-bottom border-1">
                            <a asp-controller="Admin" asp-action="RunUsers" class="w-100 btn btn-outline-secondary border-0 text-start">Run users</a>
                        </div>
                        <div class="border-bottom border-1">
                            <a asp-controller="UserMenu" asp-action="Profile" class="btn w-100 btn-outline-secondary border-0 text-start">Your profile</a>
                            <a asp-controller="UserMenu" asp-action="OpenUserTamplates" class="btn w-100 btn-outline-secondary border-0 text-start">All templates</a>
                        </div>
                    }
                    else
                    {
                        <div class="border-bottom border-1">
                            <a asp-controller="UserMenu" asp-action="Profile" class="btn w-100 btn-outline-secondary border-0 text-start">Your profile</a>
                            <a asp-controller="UserMenu" asp-action="OpenUserTamplates" class="btn w-100 btn-outline-secondary border-0 text-start">Your templates</a>
                        </div>
                    }
                    <div class="border-bottom border-1">
                        <a asp-controller="UserMenu" asp-action="Settings" class="btn w-100 btn-outline-secondary border-0 text-start">Settings</a>
                    </div>
                    <a asp-controller="Account" asp-action="Logout" class="btn w-100 btn-outline-secondary border-0 text-start">Log Out</a>
                </div>
            </div>
        }
    </header>

    <main role="main" class="container-fluid flex-grow-1 bg-white" style="min-height: 50px;">
        @RenderBody()

        <div class="toast-container position-fixed bottom-0 end-0 p-3">
            @if (TempData["ToastMessage"] != null)
            {
                <div class="toast-container position-fixed end-0 p-3" style="bottom:10vh">
                    <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="5000">
                        <div class="toast-header">
                            <img src="~/Logo.png" class="rounded me-2 img-fluid" style="width:2vw;" alt="logo">
                            <strong class="me-auto">FormiX</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                        <div class="toast-body">
                            @TempData["ToastMessage"]
                        </div>
                    </div>
                </div>
            }
        </div>
    </main>

    <footer class="border-top footer text-muted bg-light py-3">
        <div class="container">
            &copy; 2024 - FormiX
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/ShowToast.js"></script>
</body>
</html>